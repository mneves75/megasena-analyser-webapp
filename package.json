{
  "name": "megasena-analise-site",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build --turbopack",
    "start": "next start",
    "lint": "eslint --max-warnings=0 .",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write .",
    "prepare": "husky",
    "db:migrate": "prisma migrate dev",
    "db:deploy": "prisma migrate deploy",
    "db:generate": "prisma generate",
    "db:seed": "prisma db seed",
    "db:reset": "prisma migrate reset --skip-seed",
    "db:fix-bet-totals": "tsx scripts/migrate-bet-totals.ts",
    "sync": "tsx scripts/sync.ts",
    "limits": "tsx scripts/limits.ts",
    "cli:smoke": "tsx scripts/cli-smoke.ts",
    "cli": "tsx scripts/megasena-cli.ts",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "@prisma/client": "^6.16.2",
    "@radix-ui/react-slot": "^1.2.3",
    "ajv": "^8.17.1",
    "chalk": "^5.6.2",
    "chrome-devtools-mcp": "^0.2.1",
    "cli-progress": "^3.12.0",
    "clsx": "^2.1.1",
    "commander": "^14.0.1",
    "next": "15.5.3",
    "ora": "^9.0.0",
    "pino": "^9.11.0",
    "react": "19.1.0",
    "react-data-grid": "^7.0.0-beta.57",
    "react-dom": "19.1.0",
    "server-only": "^0.0.1",
    "tailwind-merge": "^3.3.1",
    "thread-stream": "^2.7.0",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@testing-library/react": "^16.3.0",
    "@types/cli-progress": "^3.11.6",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/testing-library__react": "^10.0.1",
    "eslint": "^9",
    "eslint-config-next": "15.5.3",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.0",
    "pino-pretty": "^13.1.1",
    "prettier": "^3.6.2",
    "prisma": "^6.16.2",
    "tailwindcss": "^4",
    "tsx": "^4.20.5",
    "typescript": "^5",
    "vitest": "^3.2.4"
  },
  "lint-staged": {
    "*.{ts,tsx,cts,mts,js,jsx}": [
      "eslint --max-warnings=0 --no-warn-ignored",
      "prettier --write"
    ],
    "*.{json,md,css,scss,html,yml,yaml}": "prettier --write"
  },
  "prisma": {
    "seed": "node prisma/seed.js"
  }
}
