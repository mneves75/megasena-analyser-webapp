# Next.js base URL used by app router data fetching
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# Bun API server configuration
API_PORT=3201
API_HOST=localhost  # Use 'localhost' for local dev, container name for Docker (e.g., 'app')

# CORS: comma-separated list of allowed origins (HTTPS required in production)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3002

# Audit log retention (days)
AUDIT_RETENTION_DAYS=400

# Structured log retention (days)
LOG_RETENTION_DAYS=30

# Database path (optional, defaults to db/mega-sena.db)
# DATABASE_PATH=./db/mega-sena.db
