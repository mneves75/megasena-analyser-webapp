# SQLite default database
DATABASE_URL="file:./dev.db"

# Token opcional para proteger /api/sync e /api/bets
SYNC_TOKEN=local-sync-token

# Parâmetros do serviço de preços (fallback)
MEGASENA_BASE_PRICE_CENTS=600
MEGASENA_PRICE_FALLBACK_UPDATED_AT=2025-07-12T00:00:00Z

# Logs e sync
LOG_LEVEL=info
SYNC_BACKFILL_WINDOW=50
# Descomente para habilitar logs legíveis via pino-pretty em scripts CLI
# LOG_PRETTY=1

